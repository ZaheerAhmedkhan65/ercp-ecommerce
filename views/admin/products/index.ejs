
<%- include('../partials/_header') %>
                  <div class="row ">
                        <div class="col-12 grid-margin">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Products</h4>
                                    <div class="template-demo">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        <div class="form-check form-check-muted m-0">
                                                            <label class="form-check-label">
                                  <input type="checkbox" class="form-check-input" id="check-all">All</label>
                                                        </div>
                                                    </th>
                                                    <th> Name </th>
                                                    <th> Category </th>
                                                    <th> Price </th>
                                                    <th> Actions </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% products.forEach(product => { %>
                                                    <tr>
                                                        <td>
                                                            <div class="form-check form-check-muted m-0">
                                                                <label class="form-check-label">
                                  <input type="checkbox" class="form-check-input"> </label>
                                                            </div>
                                                        </td>
                                                        <td> <%= product.name %> </td>
                                                        <td> <%= product.category_name %> </td>
                                                        <td> <%= product.price %> </td>
                                                        <td>
                                                            <div class="template-demo">
                                                                <a href="/admin/products/<%= product.id %>/edit" class="btn btn-primary">Edit</a>
                                                                <a href="/admin/products/<%= product.id %>/delete" class="btn btn-danger">Delete</a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
<%- include('../partials/_footer') %>