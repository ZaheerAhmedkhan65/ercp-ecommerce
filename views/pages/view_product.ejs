<%- include("../partials/_header") %>

    <div class="row mt-5">
        <div class="col-lg-6 d-flex align-items-center justify-content-center">
            <a href="<%= product.image %>">
                <img src="<%= product.image %>" alt="Product Image" class="img-fluid" style="height: 300px; object-fit: cover;">
            </a>
        </div>
        <div class="col-lg-6">
            <h2><%= product.name %></h2>
            <p>
                <strong>Price:</strong>
                <%= product.price %> PKR
            </p>
            <p>
                <strong>Description:</strong>
                <%= product.description %>
            </p>
        </div>
    </div>

<%- include("../partials/_footer") %>